<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
    <TextView
        android:id="@+id/tv_sign_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Please recognize the sign language"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <VideoView
        android:id="@+id/fl_sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_sign">
    </VideoView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_sign"
        android:padding="20dp">

        <EditText
            android:id="@+id/et_sign_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="번역된 텍스트가 입력됩니다."
            android:textSize="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical = "10dp"
            android:background="@drawable/shape_roundbox_50"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_sign_send"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btn_sign_send"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_send"
            app:layout_constraintStart_toEndOf="@id/et_sign_translate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_sign_translate"
            app:layout_constraintBottom_toBottomOf="@id/et_sign_translate"
            android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>