<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_roundbox_10"
    android:backgroundTint="@color/white"
    android:paddingVertical="10dp"
    android:paddingHorizontal="16dp"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/iv_iteminvite_profile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/shape_circle_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_iteminvite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅방 초대 요청"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_iteminvite_profile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/tv_iteminvite_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="su_1234@gmail.com 님에게 채팅 요청이 왔습니다."
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_iteminvite_title"
        app:layout_constraintStart_toStartOf="@id/tv_iteminvite_title"
        android:layout_marginTop="4dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_iteminvite_accept"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="accept"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_roundbutton"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tv_iteminvite_content"
        app:layout_constraintEnd_toStartOf="@id/btn_iteminvite_reject"
        app:layout_constraintTop_toBottomOf="@id/tv_iteminvite_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_iteminvite_reject"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="reject"
        android:textSize="12sp"
        android:backgroundTint="@color/gray2"
        android:background="@drawable/shape_roundbutton"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/btn_iteminvite_accept"
        app:layout_constraintStart_toEndOf="@id/btn_iteminvite_accept"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>