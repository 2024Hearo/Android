<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 커스텀 상단바 -->
    <View
        android:id="@+id/view_custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/white"
        android:elevation="0dp">

    </View>

    <!-- Welcome 메시지 -->
    <TextView
        android:id="@+id/txt_register_WelcomeMessage"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안녕하세요,\nHearo에 오신걸 환영합니다 :)"
        android:textSize="18dp"
        android:layout_marginTop="16dp"/>

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/txt_register_guideMessage"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Hearo는 수어,음성,텍스트를 상호 변환하여 다양한 방법을 통해 채팅 할 수 있는 채팅 어플입니다. Hearo를 통해, 다양한 사람들과 다양한 방법으로 대화해보세요."
        android:textSize="12dp"
        android:layout_below="@id/txt_register_WelcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- 닉네임 필드 -->
    <EditText
        android:id="@+id/edt_register_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:layout_below="@id/txt_register_guideMessage"
        android:layout_marginTop="0dp"/>

    <!-- 이메일 필드 -->
    <EditText
        android:id="@+id/edt_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:layout_below="@id/edt_register_nickname"
        android:layout_marginTop="0dp"/>

    <!-- 비밀번호 필드 -->
    <EditText
        android:id="@+id/edt_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="회원 비밀번호"
        android:inputType="textPassword"
        android:layout_below="@id/edt_register_email"
        android:layout_marginTop="0dp"/>

    <!-- 비밀번호 확인 필드 -->
    <EditText
        android:id="@+id/edt_register_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="회원비밀번호 확인"
        android:inputType="textPassword"
        android:layout_below="@id/edt_register_password"
        android:layout_marginTop="0dp"/>

    <!-- 개인정보 취급 방침 동의 체크박스 -->
    <CheckBox
        android:id="@+id/btn_register_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_register_confirm"
        android:layout_marginTop="8dp"
        android:text="개인정보 취급 방침에 동의합니다."/>

    <!-- 이용약관 동의 체크박스 -->
    <CheckBox
        android:id="@+id/btn_register_agree_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register_agree"
        android:layout_marginTop="0dp"
        android:text="이용약관에 동의합니다." />

    <!-- 회원가입 완료 버튼 -->
    <Button
        android:id="@+id/btn_register_done"
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register_agree_2"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="회원가입 완료" />
</RelativeLayout>

