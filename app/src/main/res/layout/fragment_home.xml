<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_home_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="20dp">
        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textSize="24sp"
            android:textColor="@color/main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/btn_home_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remind"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_home_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_home_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingTop="28dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home_introbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_roundbox_10"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_home_profile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/shape_circle_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, 수정\nHow was your day today?"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/iv_home_profile"
                app:layout_constraintTop_toTopOf="@id/iv_home_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_home_profile"
                android:layout_marginLeft="14dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_home_profile"
                android:layout_marginTop="12dp"
                tools:listitem="@layout/item_invitelist"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <EditText
            android:id="@+id/et_home_aichat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Talk with Hearobot"
            android:textSize="12sp"
            android:paddingVertical="10dp"
            android:paddingStart="52dp"
            android:paddingEnd="36dp"
            android:background="@drawable/shape_roundbox_10"
            app:layout_constraintTop_toBottomOf="@id/cl_home_introbox"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home_sendaichat"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/ic_send"
            app:layout_constraintEnd_toEndOf="@id/et_home_aichat"
            app:layout_constraintTop_toTopOf="@id/et_home_aichat"
            app:layout_constraintBottom_toBottomOf="@id/et_home_aichat"
            android:layout_marginRight="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 채팅목록"
            app:layout_constraintTop_toBottomOf="@id/et_home_aichat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>